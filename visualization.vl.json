{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "background": "#c9c9c5",
  "data": {
    "url": "https://raw.githubusercontent.com/szhangg18/szhangg18.github.io/main/countryYearsMA2.csv"
  },
  "transform": [
    {
      "lookup": "country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/szhangg18/fit3179/main/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "key": "properties.NAME",
        "fields": ["properties", "type", "geometry"]
      }
    },
    {"filter": "datum.year==year"}
  ],
  "params": [
    {
      "name": "year",
      "value": 1970,
      "bind": {
        "input": "range",
        "min": 1970,
        "max": 2018,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ],
  "projection": {"type": "naturalEarth1"},
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "change",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [-1, -0.5, 0, 0.5, 1, 1.5],
        "range": [
          "#002947",
          "#6BBCD1",
          "#FFF2CE",
          "#FEB938",
          "#FD9415",
          "#E23201",
          "#8b0000"
        ]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "change", "type": "quantitative", "title": "Change"}
    ]
  },
  "config": {}
}
